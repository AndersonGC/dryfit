{
  "expo": {
    "name": "DryFit",
    "slug": "dryfit",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "dryfit",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a0a0a"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.dryfit.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Precisamos de acesso à sua galeria para você alterar sua foto de perfil.",
        "NSCameraUsageDescription": "Precisamos de acesso à câmera para você tirar uma foto de perfil.",
        "NSPhotoLibraryAddUsageDescription": "Precisamos salvar fotos na sua galeria."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0a0a0a"
      },
      "package": "com.dryfit.app",
      "permissions": [
        "READ_MEDIA_IMAGES",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "CAMERA"
      ]
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-image-picker"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
