// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  email      String   @unique
  password   String
  name       String
  avatarUrl  String?  @db.Text
  role       Role     @default(STUDENT)
  inviteCode String?  @unique
  coachId    String?

  coach    User?  @relation("CoachStudents", fields: [coachId], references: [id])
  students User[] @relation("CoachStudents")

  inviteCodes InviteCode[] @relation("CoachInviteCodes")

  coachWorkouts   Workout[] @relation("CoachWorkouts")
  studentWorkouts Workout[] @relation("StudentWorkouts")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([coachId])
  @@index([inviteCode])
}

enum Role {
  COACH
  STUDENT
}

model Workout {
  id             String        @id @default(cuid())
  title          String
  youtubeVideoId String?
  status         WorkoutStatus @default(PENDING)
  scheduledAt    DateTime      @default(now())
  completedAt    DateTime?
  studentFeedback String?       @db.Text
  blocks         WorkoutBlock[] @relation("WorkoutBlocks")

  coachId   String
  coach     User   @relation("CoachWorkouts", fields: [coachId], references: [id])
  studentId String
  student   User   @relation("StudentWorkouts", fields: [studentId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([studentId, status])
  @@index([coachId])
}

model WorkoutCategory {
  id        String   @id @default(cuid())
  name      String   @unique
  blocks    WorkoutBlock[] @relation("CategoryBlocks")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum WorkoutStatus {
  PENDING
  COMPLETED
}

model InviteCode {
  id        String    @id @default(cuid())
  code      String    @unique
  coachId   String
  coach     User      @relation("CoachInviteCodes", fields: [coachId], references: [id])
  usedAt    DateTime?
  usedBy    String?
  createdAt DateTime  @default(now())
}

model EmailVerification {
  id        String   @id @default(cuid())
  email     String   @unique
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model WorkoutBlock {
  id          String   @id @default(cuid())
  workoutId   String
  workout     Workout  @relation("WorkoutBlocks", fields: [workoutId], references: [id], onDelete: Cascade)
  
  categoryId  String
  category    WorkoutCategory @relation("CategoryBlocks", fields: [categoryId], references: [id])
  
  description String?  @db.Text
  order       Int      @default(0)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([workoutId])
  @@index([categoryId])
}
